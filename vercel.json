{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]
    }
  ],
  "functions": {
    "app.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "MYSQL2_FORCE_PURE_JS": "true"
    }
  }
}